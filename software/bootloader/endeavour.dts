/dts-v1/;

/ {
  #address-cells = <1>;
  #size-cells = <1>;
  model = "Endeavour";

  chosen {
    bootargs = "console=ttyS0,sbi:115200e earlycon=endeavour_sbi debug root=/dev/ram";
    //bootargs = "console=ttyS0,115200e debug root=/dev/ram init=/bin/busybox -- sh";
    linux,initrd-start = <0x87000000>;
    linux,initrd-end   = <0x87400000>;
  };

  cpus {
    #address-cells = <1>;
    #size-cells = <0>;
    timebase-frequency = <1000000>;
    cpu0: cpu@0 {
      device_type = "cpu";
      reg = <0>;
      status = "okay";
      compatible = "riscv";
      riscv,isa-base = "rv32i";
      riscv,isa-extensions = "i", "m", "a", "c", "zicntr", "zicsr", "zifencei";
      mmu-type = "riscv,sv32";
      cpu0_intc: interrupt-controller {
        #interrupt-cells = <1>;
        interrupt-controller;
        compatible = "riscv,cpu-intc";
      };
    };
  };

  uart0: serial@100 {
    compatible = "endeavour,uart";
    reg = <0x100 0xc>;
  };

  memory@80000000 {
    device_type = "memory";
    reg = <0x80000000 0x08000000>;
  };

  reserved-memory {
    #address-cells = <1>;
    #size-cells = <1>;
    ranges; 
    framebuffer@80000000 {
      no-map;
      reg = <0x80000000 0x400000>;
    };
  };

};
